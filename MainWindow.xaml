<Window x:Class="MatchingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchingGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel>
        <!-- Title -->
        <TextBlock Margin="10 0 10 0" FontSize="16" HorizontalAlignment="Center"> 
            <Bold>
                Welcome to the matching game 
            </Bold>
        </TextBlock>
        <!-- Steps -->
        <TextBlock Margin="10 5 10 5"> 
            <Bold>
                Step 1 - load your partipipants data
            </Bold>
        </TextBlock>
        <Button Name="LoadButton" Click="LoadButton_Click"> 
            Load 
        </Button>
        <TextBlock Margin="10 5 10 5"> 
            <Bold>
                Step 2 - Run the game
            </Bold>
        </TextBlock>
        <TextBlock Margin="10 5 10 5"> 
            <Bold>
                Step 3 - Watch the game results
            </Bold>
        </TextBlock>

    </StackPanel>
</Window>
